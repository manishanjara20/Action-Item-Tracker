{
  "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.16/MicrosoftTeams.schema.json",
  "manifestVersion": "1.16",
  "version": "1.0.0",
  "id": "00000000-0000-0000-0000-000000000000",
  "packageName": "com.example.actionitemtracker",
  "developer": {
    "name": "Example",
    "websiteUrl": "https://example.com",
    "privacyUrl": "https://example.com/privacy",
    "termsOfUseUrl": "https://example.com/terms"
  },
  "name": {
    "short": "Action Item Tracker",
    "full": "Action Item Tracker"
  },
  "description": {
    "short": "Track action items from Teams messages",
    "full": "Action Item Tracker uses AI to parse Teams messages for action items and deadlines."
  },
  "staticTabs": [
    {
      "entityId": "actiontracker",
      "name": "Action Tracker",
      "contentUrl": "https://yourdomain.com/index.html",
      "websiteUrl": "https://yourdomain.com/index.html",
      "scopes": ["personal"]
    }
  ],
  "validDomains": [
    "yourdomain.com"
  ],
  "webApplicationInfo": {
    "id": "YOUR_APP_ID",
    "resource": "api://YOUR_APP_ID"
  }
}
